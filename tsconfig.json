{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@mobile/*": ["mobile/*"],
      "@api/*": ["api-server/*"],
      "@common/*": ["packages/common/*"]
    },
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"],
  "include": ["packages", "api-server", "mobile"]
}
